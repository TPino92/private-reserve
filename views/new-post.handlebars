<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <div class="container">
    <div class='row'>
      <div class="col">
        <form id="new-post-form" class="card-body">
          <div>
            <label class="form-label" for="post-title">Title</label>
            <input type="text" name="post-title" class="form-input" value='{{name}}' />
          </div>
          <div>
            <label class="form-label" for="post-body">Content</label>
            <textarea name="post-body" class="form-input"></textarea>
          </div>
          <button type="submit" class="btn">Create</button>
        </form>
      </div>
    </div>
  </div>

</div>

<script src="/javascript/new.js"></script>