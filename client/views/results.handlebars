<h1 id="searchTitle">You Searched: </h1>
<div class="container">
    <div class="row">
        {{#each results}}
        <div class="card bg-info col p-3">
            <div class="card-body text-center">
                <h3 class="card-title">{{name}}</h3>
                <h4 class="card-text">{{race}}</h4>
                <br>
                <p class="card-text">{{desc}}</p>
                <a href="../../dashboard/new/{{id}}">New Post</a>
                {{!-- How do I add this results name to a new post --}}
                <br>
            </div>
            <br>
        </div>
        
        {{/each}}
    </div>
</div>

<script src="/javascript/search.js"></script>